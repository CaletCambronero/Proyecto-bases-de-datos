Create Table Categorias ( 
	idCategorias Int primary key indertity (1,1),
	nombre varchar(100),
	)

Create Table Productos ( 
	idProductos  Int primary key indertity (1,1),
	nombre varchar(100),
	descripcion varchar(1000),
	precio int, 
	cantidadStock smallint,
	idCompras int,
	idVentas int,
	Foreign Key (idCompras) references Compras(idCompras),
	Foreign Key (idVentas) references Ventas(idVentas),
	)

Create Table Proveedores ( 
	idProveedores  Int primary key indertity (1,1),
	nombre varchar(100),
	direccion varchar(500),
	telefono varchar(100),
	contactoPrincipal varchar(100)
	)

Create Table ventas ( 
	idVentas  Int primary key indertity (1,1),
	cantidad int,
	contactoPrincipal varchar(100),
	precio int, 
	)


